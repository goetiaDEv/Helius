<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Helius.Avalonia.App"
             RequestedThemeVariant="Dark">

    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="avares://Avalonia.Controls.ColorPicker/Themes/Fluent/Fluent.xaml" />
        
        <!-- Custom Styles -->
        <Style Selector="Window">
            <Setter Property="Background" Value="#1a1a1a" />
        </Style>
        
        <Style Selector="TextBlock.header">
            <Setter Property="FontSize" Value="24" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="#00d4ff" />
        </Style>
        
        <Style Selector="TextBlock.subheader">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="#ffffff" />
            <Setter Property="Margin" Value="0,10,0,5" />
        </Style>
        
        <Style Selector="TextBlock.status">
            <Setter Property="FontFamily" Value="Consolas, monospace" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Foreground" Value="#00ff00" />
        </Style>
        
        <Style Selector="TextBlock.error">
            <Setter Property="FontFamily" Value="Consolas, monospace" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Foreground" Value="#ff6b6b" />
        </Style>
        
        <Style Selector="TextBlock.warning">
            <Setter Property="FontFamily" Value="Consolas, monospace" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Foreground" Value="#ffd93d" />
        </Style>
        
        <Style Selector="Button.primary">
            <Setter Property="Background" Value="#0078d4" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="#0078d4" />
            <Setter Property="Padding" Value="16,8" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>
        
        <Style Selector="Button.primary:pointerover">
            <Setter Property="Background" Value="#106ebe" />
            <Setter Property="BorderBrush" Value="#106ebe" />
        </Style>
        
        <Style Selector="Button.danger">
            <Setter Property="Background" Value="#d13438" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="#d13438" />
            <Setter Property="Padding" Value="16,8" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>
        
        <Style Selector="Button.danger:pointerover">
            <Setter Property="Background" Value="#a4262c" />
            <Setter Property="BorderBrush" Value="#a4262c" />
        </Style>
        
        <Style Selector="ScrollViewer.console">
            <Setter Property="Background" Value="#0c0c0c" />
            <Setter Property="BorderBrush" Value="#333333" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="10" />
        </Style>
    </Application.Styles>

</Application>